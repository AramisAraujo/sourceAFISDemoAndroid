<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main2Activity"
    tools:showIn="@layout/activity_main2">

    <Button
        android:id="@+id/buttonProbe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Probe Image"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="590dp" />

    <Button
        android:id="@+id/buttonCandidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Candidate Image"
        app:layout_constraintTop_toBottomOf="@+id/buttonProbe"
        tools:layout_editor_absoluteX="34dp" />

    <Button
        android:id="@+id/buttonCompare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compare Fingerprints"
        app:layout_constraintTop_toBottomOf="@+id/buttonCandidate"
        tools:layout_editor_absoluteX="81dp" />

    <TextView
        android:id="@+id/resultsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results:"
        app:layout_constraintTop_toBottomOf="@+id/buttonCompare"
        tools:layout_editor_absoluteX="164dp" />
</android.support.constraint.ConstraintLayout>